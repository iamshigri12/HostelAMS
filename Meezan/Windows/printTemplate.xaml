<Window x:Class="Meezan.Windows.printTemplate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="printTemplate">
    <Grid Name="grdmain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="607*"/>
            <ColumnDefinition Width="124*"/>
               
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="82*"/>
            <RowDefinition Height="373*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Image Name="imgHeader" Source="/Meezan;component/Images/ReportHeader.JPG" Grid.Column="1"></Image>
        <StackPanel Name="pnlitem" Grid.Row="1" Grid.ColumnSpan="2" Orientation="Vertical" Margin="0,0,58,0" Grid.Column="1">
            
            
        </StackPanel>
        
        <TextBlock Grid.Column="2" VerticalAlignment="Center" Name="tbReceiptDate"></TextBlock>
        <TextBlock Grid.Row="2" Grid.ColumnSpan="3" Text=" Printed By : " Name="tbfooter"></TextBlock>
        
    </Grid>
</Window>
